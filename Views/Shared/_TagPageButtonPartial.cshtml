<div class="ui buttons">
    <a asp-action="Edit" asp-controller="SpecialTag" class="ui inverted primary button" asp-route-id="@Model">
        <i class="far fa-edit"></i>
    </a>
    <a asp-action="Details" asp-controller="SpecialTag" class="ui inverted green button" asp-route-id="@Model"><i class="fas fa-list-ul"></i></a>
    <a asp-action="Delete" asp-controller="SpecialTag" class="ui inverted red button" asp-route-id="@Model">
        <i class="fas fa-trash-alt"></i>
    </a>
</div>