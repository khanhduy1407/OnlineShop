@model OnlineShop.Models.ApplicationUser
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}
<br />

<h2 class="text-info">@ViewData["Title"]</h2>

<a class="wwg medium text" asp-action="Index"><i class="icon arrow left"></i> Quay lại</a>

<div class="ui segment">
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="ui large form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <h3>@ViewBag.message</h3>
        <div class="three fields">
            <div class="field">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="Tên người dùng hoặc Email" readonly class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="field">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" placeholder="Họ" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="field">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" placeholder="Tên" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="field">
            <button type="submit" class="ui inverted primary button">Cập nhật</button>
            <a asp-action="Index" class="ui inverted green button">Trở về</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


