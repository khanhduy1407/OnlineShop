@using OnlineShop.Models;
@model IEnumerable<ProductTypes>
@{
    ViewData["Title"] = "Danh sách loại sp";
}

<br/><br/>
<div class="row">
  <div class="col-6">
        <h2 class="text-info">@ViewData["Title"]</h2>
  </div>
  <div class="col-6 text-right">
        <a asp-action="Create" class="ui inverted primary button"><i class="fa-solid fa-plus"></i>&nbsp; Thêm loại sp mới</a>
  </div>
</div>
<br/>

<a class="wwg medium text" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="icon arrow left"></i> Quay lại</a>

<br />

<div>
  <table class="ui celled table">
    <tr class="table-info">
      <th>Id</th>
      <th>Loại sp</th>
      <th></th>
    </tr>
        @foreach (var item in Model)
        {
            <tr>
              <td>@item.Id</td>
              <td>@item.ProductType</td>
              <td class="right aligned collapsing">
                <partial name="_ButtonPartial" model="@item.Id" />
              </td>
            </tr>
        }
    </table>
</div>

@section scripts {
  <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
  <script type="text/javascript">
    $(function() {
        var message = '@TempData["message"]';
        var remove = '@TempData["remove"]';
        if (message != '') {
          alertify.success(message);
        }
        if (remove != '') {
          alertify.error(remove);
        }
    })
  </script>
}

