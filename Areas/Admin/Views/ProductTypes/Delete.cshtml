@model OnlineShop.Models.ProductTypes
@{
    ViewData["Title"] = "Xóa loại sản phẩm";
}

<br/>

<h2 class="text-info">Xóa loại sản phẩm</h2>
<div class="ui segment">
  <form asp-action="Delete" method="post" class="ui large form">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger">
      <!---->
    </div>
    <div class="field">
      <label asp-for="ProductType"></label>
      <input asp-for="ProductType" readonly />
      <span asp-validation-for="ProductType" class="text-danger"></span>
    </div>
    <div class="field">
      <button type="submit" class="ui inverted red button">Xóa</button>
      <a asp-action="Index" class="ui inverted green button">Trở về</a>
    </div>
  </form>
</div>

@section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

